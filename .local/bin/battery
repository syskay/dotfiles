#!/bin/bash

for battery in /sys/class/power_supply/BAT?*
do
	status=$(cat "$battery/status")
	capacity=$(cat "$battery/capacity")
  if [ $capacity -gt 0 ] && [ $capacity -lt 20 ]
  then
      icon=""
  fi

  if [ $capacity -gt 21 ] && [ $capacity -lt 50 ] 
  then
      icon=""
  fi

  if [ $capacity -gt 51 ] && [ $capacity -lt 75 ]
  then
      icon=""
  fi

  if [[ $capacity -gt 76 && $capacity -lt 90 ]]
  then
      icon=""
  fi
  
  if [[ $capacity -gt 91 && $capacity -lt 100 ]]
  then
      icon=""
  fi
	printf "%s%s%s%%\n" "$status" "$icon" "$capacity";
done
