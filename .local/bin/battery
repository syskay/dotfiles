#!/bin/bash

for battery in /sys/class/power_supply/BAT?*
do
	status=$(cat "$battery/status")
	capacity=$(cat "$battery/capacity")
  if [ $capacity -gt 0 ] && [ $capacity -lt 10 ]
  then
      icon=""
  fi

  if [ $capacity -gt 11 ] && [ $capacity -lt 40 ] 
  then
      icon=""
  fi

  if [ $capacity -gt 41 ] && [ $capacity -lt 75 ]
  then
      icon=""
  fi

  if [[ $capacity -gt 76 && $capacity -lt 90 ]]
  then
      icon=""
  fi
  
  if [[ $capacity -gt 91 && $capacity -lt 100 ]]
  then
      icon=""
  fi
	printf "%s %s%%\n" "$icon" "$capacity";
done
